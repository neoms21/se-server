{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "rx",
      "node",
      "core-js",
      "socket.io",
      "express",
      "mongodb",
      "mocha",
      "sinon"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "**/*.spec.ts"
  ]
}